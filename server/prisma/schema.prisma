generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @unique @default(uuid())
  name      String
  email     String   @unique
  phone     String
  status    Status?  @default(NOVO)
  createdAt DateTime @default(now())
}

enum Status {
  NOVO
  EM_CONTATO
  CONVERTIDO
}
